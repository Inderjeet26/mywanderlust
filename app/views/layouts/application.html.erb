<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Wanderlust" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Wanderlust" %>">
    <%= include_gon %>
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= javascript_include_tag "http://maps.googleapis.com/maps/api/js?libraries=places&sensor=false&language=en" %>
    <%= javascript_include_tag  "http://code.angularjs.org/1.1.5/angular-cookies.min.js" %>
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
  </head>
  <body ng-app="odyssey" class="<%= controller_name %> <%= action_name %>">
    <div class="container">
      <div class="page-header">
        <div class="row">
          <div class="col-md-10 col-xs-10">
            <a href="/"><h1>Wanderlust</h1></a>
          </div>
          <div class="col-md-2">
            <div style="padding-top:25px;">
            <%= render 'layouts/navigation' %>
            </div>
          </div>
        </div>
      </div>
      <%= render 'layouts/messages' %>
      <%= yield %>
    </div>
  </body>
</html>
