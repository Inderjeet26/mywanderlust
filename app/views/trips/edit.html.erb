<div ng-controller="SearchCtrl" ng-init="explore();">
  <p class="lead">Pick destinations you want to go to in {{current_city}}</p>
    <input type="text" class="form-control" style="margin-bottom:15px;" autofocus ng-model="placeQuery" placeholder="Add a destination" typeahead-on-select='onSelect($item, $model, $label)' typeahead-min-length="0" typeahead-loading='isLoading' typeahead="suggestion as suggestion.name for suggestion in getSuggestions()">
    <button class="btn btn-default pull-right" ng-click="isCollapsed = !isCollapsed">View Top Suggestions</button>

<!--     <div collapse="isCollapsed"> -->
      <div class="row well">
        <carousel interval="myInterval">
          <slide ng-repeat="e in explories" active="slide.active">
            <div ng-repeat="p in e" class="col-md-offset-2">
              <div class="col-md-3">
                <a href ng-click="addDestination(p.venue);">
                  <img ng-src="{{p.venue.photos.groups[0].items[0].prefix + '200x200' + p.venue.photos.groups[0].items[0].suffix}}" class="img-thumbnail">
                  <h4>{{ p.venue.name }}</h4>
                </a>
                <p>{{p.venue.categories[0].name}}</p>
              </div>
            </div>
          </slide>
        </carousel>
      </div>
    <div class="row">
      <div class="col-md-9">
        <div class="col-md-4" ng-repeat="p in destinations">
              <div class="thumbnail well">
                <img src="{{ p.photo_url }}" class="img-responsive">
                <div class="caption">
                  <h3>{{ p.name }}</h3>
<!--                   <address>
                    {{p.address}}<br>
                    {{p.city}}, {{p.state}} {{p.postalCode}}<br>
                    <abbr title="Phone">P:</abbr> (123) 456-7890
                  </address> -->
                </div>
              </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="well">
          <google-map center="center" draggable="true" zoom="zoom" markers="destinations" mark-click="true" style="height: 400px; display: block;"></google-map>
        </div>
      </div>
    </div>
 </div>
